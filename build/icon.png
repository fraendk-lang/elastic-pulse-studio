<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="512" height="512">
  <defs>
    <linearGradient id="grad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffdc5e;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ffb800;stop-opacity:1" />
    </linearGradient>
    <filter id="glow">
      <feGaussianBlur stdDeviation="4" result="coloredBlur"/>
      <feMerge>
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background circle with gradient border -->
  <circle cx="256" cy="256" r="240" fill="#0a0a0a"/>
  <circle cx="256" cy="256" r="240" fill="none" stroke="url(#grad)" stroke-width="8"/>
  
  <!-- Pulse waveform icon - larger and more prominent -->
  <path d="M 96 256 L 160 128 L 224 384 L 288 64 L 352 448 L 416 256" 
        stroke="url(#grad)" 
        stroke-width="24" 
        fill="none" 
        stroke-linecap="round" 
        stroke-linejoin="round"
        filter="url(#glow)"/>
  
  <!-- Center pulse dot -->
  <circle cx="256" cy="256" r="16" fill="url(#grad)" filter="url(#glow)"/>
  
  <!-- Additional accent circles -->
  <circle cx="256" cy="256" r="200" fill="none" stroke="url(#grad)" stroke-width="2" opacity="0.3"/>
  <circle cx="256" cy="256" r="180" fill="none" stroke="url(#grad)" stroke-width="1" opacity="0.2"/>
</svg>

